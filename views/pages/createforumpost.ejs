<!DOCTYPE html>
<html lang="en">

<!-- Include the head -->
<%- include('../partials/head.ejs', { title: 'Create A Post | PlacementHub', cssFiles: ['/styles/createforumpost.css', '/styles/nav.css'], bootstrap: true, infolder: false  }) %>

<body>

<!-- Include the navbar -->
<%- include('../partials/nav.ejs', { currentPage: 'CreateForumPost', infolder: false }) %>

<main class="main">
    <div class="main-cards">
        <div class="card">
            <div class="user-info">
                <img src="img/user1.jpg" alt="User Photo" class="user-photo" />
                <div class="user-details">
                    <p class="user-name">Michael Piercey</p>
                    <p class="user-course">Computer Science</p>
                </div>
                
                <!-- Anonymous Slider -->
                <div class="anonymous-toggle">
                    <label class="toggle-label">
                        Post Anonymously
                        <input type="checkbox">
                        <span class="slider">
                            <span class="circle"></span>
                        </span>
                    </label>
                </div>
            </div>

            <!-- Category and Subcategory Selection -->
            <select class="category-dropdown">
                <option>Select Category</option>
                <option>General</option>
                <option>Programming</option>
                <option>Cybersecurity</option>
            </select>

            <select class="subcategory-dropdown">
                <option>Select Subcategory</option>
                <option>Beginner</option>
                <option>Intermediate</option>
                <option>Advanced</option>
            </select>

            <!-- Heading and Details Text Fields -->
            <input type="text" class="post-title-input" placeholder="Enter your heading or question" />
            <textarea class="post-details-textarea" rows="5" placeholder="Add more details"></textarea>

            <!-- Action Buttons -->
            <div class="action-buttons">
                <button class="add-image">
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" class="feather feather-image">
                        <rect x="3" y="3" width="18" height="18" rx="2" ry="2"></rect>
                        <circle cx="8.5" cy="8.5" r="1.5"></circle>
                        <path d="M21 15l-5-5L5 21"></path>
                    </svg>
                    Add Image
                </button>
                <button class="post-button">Post</button>
            </div>
        </div>
    </div>
</main>

<%- include('../partials/footer.ejs')%>

</body>

<!-- links to bootstrap js and jquery -->
<script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>

<script src="/scripts/createforumpost.js"></script>

</html>
