<!DOCTYPE html>
<html lang="en">

<!-- Include the head -->
<%- include('../partials/head.ejs', { title: 'Forum | PlacementHub', cssFiles: ['/styles/forum.css', '/styles/nav.css'], bootstrap: true, infolder: false  }) %>


<body>

<!-- Include the navbar -->
<%- include('../partials/nav.ejs', { currentPage: 'forum', infolder: false }) %>

<main class="main">
    <div class="main-header">
        <h1 class="main-title">Explore Our Forums</h1>
        <div class="main-overview">
            <div class="overviewcard" data-forum="regions">
                <div class="overviewcard__info">NHS Regions</div>
            </div>
            <div class="overviewcard" data-forum="degree">
                <div class="overviewcard__info">Degree</div>
            </div>
            <div class="overviewcard" data-forum="accommodation">
                <div class="overviewcard__info">Accommodation</div>
            </div>
            <div class="overviewcard" data-forum="other">
                <div class="overviewcard__info">Other</div>
            </div>
        </div>
    </div>

    <!-- NHS Regions Forums -->
    <div class="forum-section regions-forums active">
        <!-- Previously defined region cards go here -->
    </div>

    <!-- Degree Forums -->
    <div class="forum-section degree-forums">
        <div class="forum-title">
            <h3>Explore Degree-Related Forums</h3>
        </div>
        <div class="main-cards">
            <div class="card degree">
                <h4>Medical Degrees</h4>
                <p><a href="/degrees/medicine">Doctor of Medicine (MD)</a></p>
                <p><a href="/degrees/nursing">Bachelor of Science in Nursing (BSN)</a></p>
                <p><a href="/degrees/pharmacy">Doctor of Pharmacy (PharmD)</a></p>
            </div>
            <div class="card degree">
                <h4>Advanced Degrees</h4>
                <p><a href="/degrees/masters-public-health">Master's in Public Health (MPH)</a></p>
                <p><a href="/degrees/masters-health-administration">Master's in Health Administration (MHA)</a></p>
                <p><a href="/degrees/phd-health-sciences">PhD in Health Sciences</a></p>
            </div>
            <div class="card degree other">
                <h4>Other Educational Resources</h4>
                <p><a href="/degrees/continuing-education">Continuing Medical Education (CME)</a></p>
                <p><a href="/degrees/certifications">Certifications and Specializations</a></p>
            </div>
        </div>
    </div>

    <!-- Accommodation Forums -->
    <div class="forum-section accommodation-forums">
        <div class="forum-title">
            <h3>Find Accommodation Options During Your Placement</h3>
        </div>
        <div class="main-cards">
            <div class="card accommodation">
                <h4>On-Campus Accommodation</h4>
                <p><a href="/accommodation/on-campus">University Dormitories</a></p>
                <p><a href="/accommodation/resident-halls">Resident Halls</a></p>
            </div>
            <div class="card accommodation">
                <h4>Off-Campus Accommodation</h4>
                <p><a href="/accommodation/apartments">Rental Apartments</a></p>
                <p><a href="/accommodation/shared-housing">Shared Housing</a></p>
                <p><a href="/accommodation/homestays">Homestays</a></p>
            </div>
            <div class="card accommodation other">
                <h4>Temporary Housing</h4>
                <p><a href="/accommodation/hotels">Hotels and Hostels</a></p>
                <p><a href="/accommodation/short-term-rentals">Short-term Rentals</a></p>
            </div>
        </div>
    </div>

    <!-- Other Miscellaneous Forums -->
    <div class="forum-section other-forums">
        <!-- Other miscellaneous forums -->
    </div>
</main>



